{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Compound",
      "configurations": ["Launch Server", "Launch Firefox"]
    }
  ],
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Firefox",
      "url": "http://127.0.0.1:5173",
      "keepProfileChanges": true,
      "clearConsoleOnReload": true,
      "profile": "default",
      "firefoxArgs": ["-devtools"],
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "Launch Server",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}"
    }
  ]
}
